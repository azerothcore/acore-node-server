{
  "compilerOptions": {
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "$this/*": ["./*"],
      "@/*": ["./src/*"]
    },
    "module": "commonjs",
    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",
    "./node_modules/@azerothcore/**/*",
  ]
}
